<?xml version="1.0" encoding="utf-8"?>
<com.zawhtetnaing.charleskeith.zhn.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        tools:src="@drawable/notdatafound" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_empty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium_2"
        tools:text="@string/new_product_error" />

</com.zawhtetnaing.charleskeith.zhn.viewpods.EmptyViewPod>